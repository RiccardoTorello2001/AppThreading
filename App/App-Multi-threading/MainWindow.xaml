<Window x:Class="App_Multi_threading.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:App_Multi_threading"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FFB900FF" Offset="0"/>
                <GradientStop Color="#FF0CFF00" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Label x:Name="lbl_risultato" Content="Label" HorizontalAlignment="Left" Margin="335,140,0,0" VerticalAlignment="Top" Width="115" Height="55" FontSize="18"/>
        <Button x:Name="btn_task" Content="Click" HorizontalAlignment="Left" Margin="335,215,0,0" VerticalAlignment="Top" Width="115" Height="45" FontSize="18" Click="btn_task_Click"/>

    </Grid>
</Window>
